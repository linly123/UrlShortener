<div class="show-shortUrl">
  <h1>Success! Please use this link:</h1>
  {{!-- <a href="{{shortNumber.url}}">https://hidden-escarpment-23149.herokuapp.com/{{shortNumber.shortNumber}}</a> --}}

  <!-- The text field -->

  <p id="show-urlText">https://hidden-escarpment-23149.herokuapp.com/{{shortNumber.shortNumber}}</p>
  <!-- The button used to copy the text -->
  <button onclick="myFunction()" class="copy-button">Copy</button><br>
  <input type="text" value="https://hidden-escarpment-23149.herokuapp.com/{{shortNumber.shortNumber}}" id="myInput">


</div>
<script>
  function myFunction() {
    /* Get the text field */
    var copyText = document.getElementById("myInput");

    /* Select the text field */
    copyText.select();
    copyText.setSelectionRange(0, 99999); /*For mobile devices*/

    /* Copy the text inside the text field */
    document.execCommand("copy");

    /* Alert the copied text */
    alert("Copied the text: " + copyText.value);
  } 
</script>